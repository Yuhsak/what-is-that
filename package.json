{
  "name": "what-is-that",
  "version": "1.1.2",
  "description": "Identify type of Object (or Primitive) for both Node.js and browser written in TypeScript",
  "author": {
    "name": "Yuhsak Inoue",
    "email": "yuhsak.inoue@gmail.com",
    "url": "https://github.com/Yuhsak"
  },

  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Yuhsak/what-is-that.git"
  },
  "main": "index.js",
  "module": "index.esm.js",
  "types": "index.d.ts",
  "files": [
    "index.*",
    "tsconfig.json",
    "tsconfig.esm.json"
  ],
  "scripts": {
    "test": "jest",
    "clean": "ls | grep -E '^index\\..*?(js|d\\.ts)|^esm|\\.tsbuildinfo$' | xargs rm -r",
    "build:compile": "tsc -b tsconfig.json tsconfig.esm.json",
    "rename:esm": "ls -d esm/* | sed -E 's/^([^\\.]*)(.*$)/\\1\\2 \\1.esm\\2/' | xargs -IX echo mv X | sh && mv esm/* . && rm -r esm",
    "build": "npm run build:compile && npm run rename:esm",
    "watch": "npm run build:compile -- --watch",
    "prebuild": "npm run clean",
    "start": "npm run watch",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "typescript": "^4.0.3",
    "jest": "26.5.2",
    "ts-jest": "^26.4.1",
    "@types/jest": "^26.0.14"
  }
}
